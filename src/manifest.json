{
  "name": "股票基金助手",
  "description": "一款查看自选股票和基金的助手，为您提供最新最快的财富动态。",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "YYJeffrey@github.com"
    }
  },
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "股票基金助手",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["browser-polyfill.js", "content.js"]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": ["storage"]
}
